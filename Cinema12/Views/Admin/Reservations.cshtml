@model IEnumerable<Cinema12.Models.Reservation>

@{
    ViewBag.Title = "Reservations";
}

<h2>Reservations</h2>

<p>
    @Html.ActionLink("Back", "Index")
</p>


<table class="table">
    <tr>
        <th>
            Client Name & Phone Number
        </th>
        <th>
            Movie
        </th>
        <th>
            Day & Hour
        </th>
        <th>
            Theatre
        </th>
        <th>
            Seats
        </th>
        <th>
            Tickets Bought
        </th>
        <th>
            Tickets Left
        </th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @item.ClientName | @item.ClientTelephone
            </td>
            <td>
                @item.MovieName
            </td>
            <td>
                @item.FromDate.ToString("dd/MM") | @item.FromDate.ToString("HH:mm") - @item.ToDate.ToString("HH:mm")
            </td>
            <td>
                @item.TheatreName
            </td>
            <td>
                @foreach (var seat in item.Seats)
                {
                    @(seat.RowLetter + "-" + seat.SeatNumber + "; ");
                }
            </td>
            <td>
                @item.NoOfSeats
            </td>
            <td>
                @item.TicketsLeft
            </td>
            <td>
                @Html.ActionLink("Delete", "DeleteReservation", new { reservationId = item.ReservationId })
            </td>
        </tr>
    }
</table>